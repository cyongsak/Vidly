@model List<Vidly.Models.Customer>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index of Customer page</h2>

@*
    Add a dynamic class for html from code

*@
@{
    var className = Model.Count > 5 ? "Popular" : null;
    // if count more than 5 then classname is "popular"
}
<h3 class="@className">Here will populate list of Customers</h3>
@if (Model.Count == 0)
{
    <p>There is no customers in the list</p>
}
else
{
    <ul>
        @foreach (var customer in Model)
        {
            <li>@customer.Name</li>
        }
    </ul>
}
