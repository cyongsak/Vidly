@model IEnumerable<Vidly.Models.Customer>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Customers</h2>

<p>There are 2 buttons from difference code.</p>
@Html.ActionLink("New Customer", "New", null, new { @class = "btn btn-default", @type = "button" }) &nbsp;

<a class="btn btn-primary" type="button" href="@Url.Action("New","Customer")">New Customer</a>
<p></p>
@if (!Model.Any())
{
    <p>There is no customers in the list</p>
}
else
{
    <table id="customers" class="table table-bordered table-hover">
        <thead><tr>
            <th>Customers List</th>
            <th>Membership Type</th>
            <th>Delete</th>
        </tr></thead>
        <tbody>
        @foreach (var customer in Model)
        {
            <tr>
                <td>@Html.ActionLink(customer.Name, "Edit", new { id = customer.Id }, null)</td>
                <td>@customer.MembershipType.Name</td>
                <td>
                    <button data-customer-id="@customer.Id" class="btn-link js-delete">Delete</button>
                </td>
            </tr>
        }
        </tbody>
    </table>
    

}

@section scripts
{
    <script>
        $("#customers").dataTable();

        $(document).ready(function() {
            $("#customers").on("click", ".js-delete",
                function() {
                    var button = $(this);

                    //use bootbox confirm
                    bootbox.confirm({
                        message: "Are you sure you want to delete this customer?",
                        buttons:
                        {
                            confirm:
                            {
                                label: "Yes I am sure.",
                                className: "btn-danger"
                            },
                            cancel:
                            {
                                label: "No",
                                className: "btn-default"
                            }
                        },
                        callback: function (result) {
                            if (result) {
                                $.ajax({
                                    url: "/api/customers/" + button.attr("data-customer-id"),
                                    method: "DELETE",
                                    success: function () {
                                        console.log("Deleted success");
                                        button.parents("tr").remove();
                                    }
                                });
                            }
                            
                        }
                    });

                });
        });
    </script>
}
